<Window x:Class="Tester.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="508">
    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top">
            <Button Width="100" Height="30" x:Name="Play" Click="Play_Click">Play</Button>
            <Button Width="100" Height="30" x:Name="Pause" Click="Pause_Click">Pause</Button>
            <Button Width="100" Height="30" x:Name="Resume" Click="Resume_Click">Resume</Button>
            <Button Width="100" Height="30" x:Name="Stop" Click="Stop_Click">Stop</Button>
            <Button Width="100" Height="30" x:Name="Dispose" Click="Dispose_Click">Dispose</Button>
        </StackPanel>
        <Button x:Name="Load" Width="100" Height="30" Click="Load_Click">Load</Button>
    </Grid>
</Window>
